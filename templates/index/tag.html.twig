{% extends "base.html.twig" %}

{% block title %}Tags
	{{ parent() }}
{% endblock %}
{% block body %}
	<div style="max-width: 700px; margin:auto;" class="mt-5">
		<h1 class="display-4">Liste des Tags</h1>
		<div class="d-flex justify-content-around">
			<a href="{{ path('tag_create') }}">
				<div class="btn btn-success mt-5">Ajouter un tag</div>
			</a>
			<a href="{{ path('tags_create') }}">
				<div class="btn btn-success mt-5">Ajouter 5 tags</div>
			</a>
		</div>
		{% if tags is defined %}
			<div class="mt-3">
				<ul class="list-group">
					{% for tag in tags %}
						<li class="list-group-item d-flex justify-content-between">
							{{ tag.name }}
							<div class="d-flex justify-content-end">
								<a href="{{ path('tag_display', {"tagName":tag.name}) }}">
									<div class="btn btn-primary">Afficher</div>
								</a>
								<a href="{{ path('tag_delete', {"tagId":tag.id}) }}">
									<div class="btn btn-danger">Supprimer</div>
								</a>
							</div>
						</li>
					{% endfor %}
				</ul>
			</div>
		{% endif %}
	</div>
{% endblock %}
